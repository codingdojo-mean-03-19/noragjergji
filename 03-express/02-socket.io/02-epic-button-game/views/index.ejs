<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <link href="stylesheets/style.css" rel="stylesheet" type="text/css"/>
    <title>Epic Button Game</title>
    <script type="text/javascript">
        $(document).ready(function(){
            var socket = io();

            $('#epic-btn').click(function(){
                socket.emit('updateNr');
            });

            $('#reset-btn').click(function(){
                socket.emit('resetNr');
            });

            socket.on('click_counter', function(data){
                $('#msg').html("The button has been pushed " + JSON.stringify(data.response) + " times!");
            });
        })    
    </script>
</head>
<body>
    <div class="container">
        <h2><span id = 'msg'></span></h2>
        <h5>Push the Button to update the count!</h5>
        <button type="submit" class='button-primary' id = 'epic-btn'>Push the epic button</button>
        <button type="submit" id = 'reset-btn'>Reset</button>
    </div>
    
</body>
</html>